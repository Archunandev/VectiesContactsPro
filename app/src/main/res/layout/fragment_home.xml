                            android:text="Mechanic"
                            android:textAlignment="center"
                            android:textSize="12sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/workers_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginBottom="8dp"
                            android:clickable="true"
                            android:elevation="8dp"
                            android:focusable="true"
                            app:cardBackgroundColor="@color/primaryColor"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="5dp">

                            <TextView
                                android:id="@+id/workers_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:fontFamily="@font/bold"
                                android:text="Workers"
                                android:drawablePadding="5dp"
                                android:drawableRight="@drawable/workers_card"
                                android:textColor="@color/white"
                                android:textSize="16sp" />


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/emer_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginBottom="8dp"
                            android:clickable="true"
                            android:elevation="8dp"
                            android:focusable="true"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="5dp">

                            <TextView
                                android:id="@+id/emer_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:fontFamily="@font/bold"
                                android:text="Emergency"
                                android:drawablePadding="5dp"
                                android:drawableRight="@drawable/emer_card"
                                android:textColor="@color/black"
                                android:textSize="16sp" />


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/support_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
