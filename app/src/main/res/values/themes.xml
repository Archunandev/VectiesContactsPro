<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VectiesContactsPro" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_smoke_lite</item>
        <item name="colorPrimaryVariant">@color/white_smoke_lite</item>
        <item name="colorOnPrimary">@color/white_smoke_lite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white_smoke_lite</item>
        <item name="colorSecondaryVariant">@color/white_smoke_lite</item>
        <item name="colorOnSecondary">@color/white_smoke_lite</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/white_smoke_lite
        </item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!--
                <item name="android:fontFamily">@font/avenirnext_regular</item>
        -->
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_bc</item>
        <item name="android:textColor">@color/chip_txt_bc</item>
        <item name="fontFamily">@font/regular</item>
        <item name="font">@font/regular</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="Theme.NormalColor" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/primaryColor</item>
        <item name="colorOnSecondary">@color/primaryColor</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--
                <item name="android:fontFamily">@font/avenirnext_regular</item>
        -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout1" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white_smoke</item>
        <item name="colorControlNormal">@color/white_smoke</item>
        <item name="colorControlActivated">@color/white_smoke</item>
        <item name="colorControlHighlight">@color/white_smoke</item>
    </style>

    <style name="button_white" parent="Widget.AppCompat.EditText">
        <item name="colorButtonNormal">@color/white_smoke_lite</item>
        <item name="colorControlHighlight">@color/white_smoke_lite</item>
        <item name="colorControlActivated">@color/white_smoke_lite</item>
        <item name="colorControlNormal">@color/white_smoke_lite</item>
    </style>

    <style name="button_blue" parent="Widget.AppCompat.EditText">
        <item name="colorButtonNormal">@color/primaryColor</item>
        <item name="colorControlHighlight">@color/primaryColor</item>
        <item name="colorControlActivated">@color/primaryColor</item>
        <item name="colorControlNormal">@color/primaryColor</item>
    </style>

</resources>